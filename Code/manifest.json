{
    "manifest_version": 3,
    "name": "Focus",
    "version": "0.1.0",
    "description": "Blocks distracting sites",
    "action": {
      "default_popup": "popup.html"
    },
    "permissions": [
      "storage"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }